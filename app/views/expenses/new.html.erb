<div>
    <%= link_to 'Back', categories_path %>
    <h3>Add new Expenses</h3>

    <%= form_with(model: Expense, url: category_expenses_path, method: :post) do |f| %>
            
        <div>
            <%= f.label :name %> <br>
            <%= f.text_field :name, placeholder: 'Enter Expenses name' %>
        </div>

        <div>
            <%= f.label :amount %><br>
            <%= f.number_field :amount, step: 1, placeholder: 'How much did you spend' %>
        </div>
            <%= f.label :categories %>
            <%= f.collection_check_boxes(:ids, @categories, :id, :name) do |b| %>
                <div class="checkbox">
                <%= b.check_box + b.label %>
                </div>
            <% end %>
        <div>
            
        </div>

        <div>
            <%= f.submit 'Save', class: 'Submit-btn' %>
        </div>

    <% end %>
</div>