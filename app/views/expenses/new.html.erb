<%= render "shared/back" %>

<div  class="expense-new">
    <h2>Add new Expenses</h2>

    <%= form_with(model: Expense, url: category_expenses_path, method: :post, class: 'create-new-expense-form') do |f| %>
            
        <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, placeholder: 'Enter Expenses name', class: 'name-input' %>
        </div>

        <div class="field">
            <%= f.label :amount %>
            <%= f.number_field :amount, step: 1, placeholder: 'How much did you spend', class: 'amount-input'  %>
        </div>

            <% if @categories %>
                <div class="cat-select-field">
                    <%= f.label :categories %>
                    <%= f.collection_check_boxes(:ids, @categories, :id, :name) do |b| %>
                        <div class="checkbox">
                        <%= b.check_box + b.label %>
                        </div>
                    <% end %>
                    </div>
            <% end %>

            <%= f.submit 'Save', class: 'Submit-expense-btn' %>

    <% end %>
</div>